<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboardWidgetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_margin"
    android:background="@drawable/layout_corners"
    android:orientation="vertical">

    <TextView
        android:id="@+id/widgetVertretungsplanHeaderItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_top_corners"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        tools:text="Test" />

    <TextView
        android:id="@+id/widgetVertretungsplanSubHeaderItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPiusBlue"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        tools:text="Test" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/widgetSubstitutionTypeItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            tools:text="Art der Vertretung" />

        <TextView
            android:id="@+id/widgetRoomItem"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            tools:text="Raum" />

        <TextView
            android:id="@+id/widgetTeacherItem"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            tools:text="Lehrer" />
    </LinearLayout>

    <TextView
        android:id="@+id/widgetCommentItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        tools:text="Test" />

    <TextView
        android:id="@+id/widgetEvaItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorEva"
        android:paddingStart="8dp"
        android:paddingTop="2dp"
        android:paddingEnd="8dp"
        android:paddingBottom="2dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        tools:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren," />

    <TextView
        android:id="@+id/widgetLastUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@drawable/layout_bottom_corners"
        tools:text="Letzte Aktualisierung" />

</LinearLayout>